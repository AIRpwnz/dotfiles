// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  // --- Server Configurations ---
  "context_servers": {
    "mcp-server-grafana": {
      "enabled": false,
      "remote": true,
      "settings": {},
    },
  },
  "agent_servers": {
    "codex": {
      "favorite_models": ["gpt-5.2-codex/xhigh"],
      "default_config_options": {},
      "favorite_config_option_values": {},
    },
  },
  // --- AI & Agent Settings ---
  "agent": {
    "default_profile": "ask",
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
    "inline_assistant_model": {
      "provider": "copilot_chat",
      "model": "claude-sonnet-4",
    },
  },
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "edit_predictions": {
    "mode": "eager",
    "enabled_in_text_threads": true,
    "disabled_globs": [],
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
    },
  },
  // --- Appearance ---
  "theme": {
    "mode": "system",
    "light": "One Dark",
    "dark": "One Dark",
  },
  "ui_font_size": 15,
  "buffer_font_size": 15,
  "buffer_font_family": "Iosevka",
  // --- Editor Behavior ---
  "base_keymap": "JetBrains",
  "helix_mode": true,
  // --- Language & File-Specific Settings ---
  "languages": {
    "Ansible": {
      "prettier": {
        "allowed": true,
      },
    },
    "Python": {
      "language_servers": ["ruff", "pyright"],
      "prettier": {
        "allowed": false,
      },
    },
    "YAML": {
      "format_on_save": "off",
      "prettier": {
        "allowed": false,
      },
    },
  },
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/host_vars/*.yml",
      "**/host_vars/*.yaml",
      "**/playbooks/*.yml",
      "**/playbooks/*.yaml",
      "**playbook*.yml",
      "**playbook*.yaml",
    ],
  },
  // --- Telemetry ---
  "telemetry": {
    "diagnostics": false,
    "metrics": false,
  },
}
